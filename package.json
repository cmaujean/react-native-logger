{
  "name": "@consensu.al/react-native-logger",
  "version": "0.2.2",
  "description": "A flexible, secure, and feature-rich on device logging system for React Native applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./schema.mjs",
      "require": "./schema.js",
      "types": "./schema/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "schema/**/*",
    "schema.js",
    "schema.mjs"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:cjs && bun run build:esm && bun run build:types && bun run build:schema",
    "build:clean": "rm -rf dist",
    "build:cjs": "tsc --module commonjs --outDir dist",
    "build:esm": "tsc --module esnext --outDir dist/esm && mv dist/esm/index.js dist/index.mjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "build:schema": "mkdir -p dist/schema && cp schema/index.d.ts dist/schema/ && cp schema/standalone/*.js dist/schema/ && cp schema/standalone/*.mjs dist/schema/",
    "prepare": "bun run build",
    "test": "bun jest --no-cache",
    "test:watch": "bun jest --watch --no-cache",
    "test:react": "bun jest tests/react.test.tsx --no-cache"
  },
  "keywords": [
    "react-native",
    "expo",
    "logging",
    "logger",
    "security",
    "drizzle",
    "sqlite"
  ],
  "author": "Consensual Ventures",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmaujean/react-native-logger.git"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0",
    "@react-native-async-storage/async-storage": ">=1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@biomejs/biome": "^1.9.4",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.70.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1",
    "react-test-renderer": "^19.1.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.0",
    "drizzle-orm": "^0.28.0"
  }
}